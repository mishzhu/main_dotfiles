/* Base colors */
* {
  font-family: "FiraCode Nerd Font", monospace;
  font-weight: 500;
  font-size: 12px;
  color: #d0c9e8;  /* light purple-ish text */
  background-color: #1a132f; /* dark purple background */
}

/* Left, center, right containers */
#left,
#center,
#right {
  display: flex;
  align-items: center;
}

/* Workspace styles */
#workspaces {
  margin-right: 10px;
}

#workspaces button {
  background: transparent;
  border: none;
  padding: 5px 8px;
  border-radius: 4px;
  margin-right: 5px;
  color: #b09de4;
  transition: background-color 0.3s;
  cursor: pointer;
}

#workspaces button.active {
  background-color: #6f5bbd;
  color: white;
}

#workspaces button.urgent {
  background-color: #c94f6d;
  color: white;
}

/* Clock style */
#clock {
  font-weight: 600;
  font-size: 14px;
  letter-spacing: 0.02em;
}

/* Custom modules (e.g. ram, cpu) */
#custom-ram,
#custom-cpu,
#custom-gpu,
#custom-ip,
#custom-network,
#battery,
#custom-storage,
#custom-brightness,
#custom-volume,
#custom-bluetooth,
#custom-power {
  padding: 0 10px;
}

/* Battery percentage */
#battery {
  color: #a3a0ff;
}

/* Sliders */
.slider {
  width: 100px;
}

/* Hover effect on clickable items */
button:hover {
  background-color: #453b7d;
  color: white;
  transition: background-color 0.3s;
}
